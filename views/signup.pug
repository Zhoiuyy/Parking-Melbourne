extends default

block content
    section.contact-main.py-5
    div.container.py-md-5
        h3.title-w3pvt.text-center Sign-up an account
        div.login.px-sm-4.mx-auto.mw-100.login-wrapper
            form.login-wrapper.w3pvt_mail_grid_right(method='POST' action='/account/sign-up')
                div.form-group
                    label.mb-2(for='username') Username:
                    // prevent same username by displaying the message
                    div.text-danger #{message}
                    input.form-control(type='text', placeholder='username*' name='username' value=username required="")
                div.form-group
                    label.mb-2(for='password') Password:
                    input.form-control(type='text', placeholder='password*' name='password' value=password required="" pattern='^[[:ascii:]]{6,20}$' title='Password is 6-20 digits')
                div.form-group
                    label.mb-2(for='name') Full Name:
                    input.form-control(type='text', placeholder='name*' name='name' value=name required="")
                div.form-group
                    label.mb-2(for='gender') Gender(optional):
                    input.form-control(type='text', placeholder='gender' name='gender' value=gender)
                div.form-group
                    label.mb-2(for='licenseId') Driver's License Id:
                    input.form-control(type='text', placeholder='licenseId*' name='licenseId' value=licenseId required="")
                div.form-group
                    label.mb-2(for='CardHolderName') CardHolderName:
                    input.form-control(type='text', placeholder='CardHolderName*' name='CardHolderName' value=CardHolderName required="")
                div.form-group
                    label.mb-2(for='CardNumber') CardNumber:
                    input.form-control(type='text', placeholder='CardNumber*' name='CardNumber' value=CardNumber required="" pattern="[0-9]{13,19}" title="Card Number is a 13-19 digit number")
                div.form-group
                    label.mb-2(for='expiryDate') expiryDate:
                    input.form-control(type='text', placeholder='expiryDate*' name='expiryDate' value=expiryDate required="" pattern="^[0-9]{2}\/[0-9]{2}$" title="MM/YY e.g.05/20")
                div.form-group
                    label.mb-2(for='CVV') CVV:
                    input.form-control(type='text', placeholder='CVV*' name='CVV' value=CVV required="" pattern="[0-9]{3,4}" title="CVV is a three or four-digit number")
                
                button.btn.btn-primary.submit.mt-2.read-more(type='submit') Sign up

                p.text-center.mt-4
                    a(href='/account/log-in') Already have an account? Log in here
                    br
        
        
