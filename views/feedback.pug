extends default

block content
    section.contact-main.py-5
        div.container.py-md-5
            h3.title-w3pvt.text-center Feedback
            div.login.px-sm-4.mx-auto.mw-100.login-wrapper
                form.login-wrapper.w3pvt_mail_grid_right(method='POST' action='/feedback')
                    div.form-group
                        label.mb-2 comment:
                        textarea.form-control(type='text', placeholder='write your comments here' name='Comment' value=comment required="")
                    button.btn.btn-primary.submit.mt-2.read-more(type='submit') Submit
