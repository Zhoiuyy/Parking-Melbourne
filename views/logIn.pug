extends default

block content
    section.contact-main.py-5
    div.container.py-md-5
        h3.title-w3pvt.text-center Login First
        div.login.px-sm-4.mx-auto.mw-100.login-wrapper
            form.login-wrapper.w3pvt_mail_grid_right(method='POST' action='/account/log-in/')
                div.form-group
                    label.mb-2(for='username') Username:
                    input.form-control(type='text', placeholder='username' name='username' value=username required="")
                div.form-group
                    label(for='password') Password:
                    input.form-control(type='password', placeholder='password' name='password' value=password required="")
                div.text-danger #{message}  
                button.btn.btn-primary.submit.mt-2.read-more(type='submit') Log in
                p.text-center.mt-4
                    a(href='/account/sign-up') No account? Sign up here
                    br

            
