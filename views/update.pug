extends default

block content
    //form for update of personal informations 
    section.contact-main.py-5   
    div.container.py-md-5
        h3.title-w3pvt.text-center Update My Information
        div.login.px-sm-4.mx-auto.mw-100.login-wrapper

            form.login-wrapper.w3pvt_mail_grid_right(method="POST" action='update')

                div.form-group
                    label.mb-2(for='password') Password:
                    input.form-control(type='text', placeholder='password*' name='password' value=username required="")
                
                div.form-group
                    label.mb-2(for='name') Full Name:
                    input.form-control(type='text', placeholder='name*' name='name' id='name' value=name required="")
                div.form-group
                    label.mb-2(for='gender') Gender:
                    input.form-control(type='text', placeholder='gender' name='gender' id='gender' value=gender)
                div.form-group
                    label.mb-2(for='licenseId') Driver's License Id:
                    input.form-control(type='text', placeholder='licenseId*' name='licenseId' id='licenseId' value=licenseId required="")
                div.form-group
                    label.mb-2(for='CardHolderName') CardHolderName:
                    input.form-control(type='text', placeholder='CardHolderName*' name='CardHolderName' id='CardHolderName' value=CardHolderName required="")
                div.form-group
                    label.mb-2(for='CardNumber') CardNumber:
                    input.form-control(type='text', placeholder='CardNumber*' name='CardNumber' id='CardNumber' value=CardNumber required="" pattern="[0-9]{13,19}" title="Card Number is a 13-19 digit number")
                div.form-group
                    label.mb-2(for='expiryDate') expiryDate:
                    input.form-control(type='text', placeholder='expiryDate*' name='expiryDate' id='expiryDate' value=expiryDate required="" pattern="^[0-9]{2}\/[0-9]{2}$" title="MM/YY e.g.05/20")
                div.form-group
                    label.mb-2(for='CVV') CVV:
                    input.form-control(type='text', placeholder='CVV*' name='CVV' id='CVV' value=CVV required="" pattern="[0-9]{3,4}" title="CVV is a three or four-digit number")

                button.btn.btn-primary.submit.mt-2.read-more(type='submit') Update

